<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#F2F2F2"
    android:scrollbars="vertical"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:layout_height="fill_parent">


    <ScrollView
        android:id="@+id/ScrollView04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:paddingTop="10sp">
                <TextView
                    android:id="@+id/tv31"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Employee Name*"
                    android:padding="4dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignBaseline="@+id/tv31"
                    android:layout_alignBottom="@+id/tv31"
                    android:layout_toRightOf="@+id/spn4"
                    android:text=":" />
                <Spinner
                    android:id="@+id/spn4"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:paddingTop="10sp">
                <TextView
                    android:id="@+id/tv33"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Date*"
                    android:padding="4dp"
                    android:textSize="15sp"
                     />
                <TextView
                    android:id="@+id/tv34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignBaseline="@+id/tv33"
                    android:layout_alignBottom="@+id/tv33"
                    android:layout_toRightOf="@+id/spn5"
                    android:text=":" />
                <EditText
                    android:id="@+id/edittext"
                    android:layout_width="fill_parent"
                    android:inputType="text"
                    android:ems="10"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:paddingTop="10sp">

                <TextView
                    android:id="@+id/tv35"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Location*"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignBaseline="@+id/tv35"
                    android:layout_alignBottom="@+id/tv35"
                    android:layout_toRightOf="@+id/spn6"
                    android:text=":" />
                <Spinner
                    android:id="@+id/spn5"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:paddingTop="10sp">
                <TextView
                    android:id="@+id/tv37"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Shift Code*"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignBaseline="@+id/tv37"
                    android:layout_alignBottom="@+id/tv37"
                    android:layout_toRightOf="@+id/spn7"
                    android:text=":" />
                <Spinner
                    android:id="@+id/spn6"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/btnLL3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="1dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/update2Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:background="@drawable/button_background2"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="UPDATE"/>

    </LinearLayout>
</RelativeLayout>