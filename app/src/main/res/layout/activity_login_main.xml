<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fos.com.atos.fositmanagement.activity.LoginActivity">

    <Button
        android:text="LOGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        style="?android:textAppearanceSmall"
        android:background="@drawable/bttnshape"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignLeft="@+id/ed2"
        android:layout_alignStart="@+id/ed2"
        android:layout_alignRight="@+id/ed1"
        android:layout_alignEnd="@+id/ed1" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/ed1"
        android:hint="Username"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:background="@drawable/shape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="31dp"
        android:hint="Password"
        android:id="@+id/ed2"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/shape"
        android:layout_below="@+id/ed1"
        android:layout_alignLeft="@+id/ed1"
        android:layout_alignStart="@+id/ed1"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="FOS IT Management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#007767"
        android:id="@+id/t1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        tools:ignore="SpUsage" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView3"
        android:contentDescription="@null"
        tools:ignore="ContentDescription"
        android:layout_below="@+id/t1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />
</RelativeLayout>
