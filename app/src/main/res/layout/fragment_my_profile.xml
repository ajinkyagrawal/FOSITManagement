<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imgV"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user"
        android:padding="32dp"
        android:background="#fff"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:layout_gravity="center_vertical"
        android:weightSum="1">

        <Button
            android:text="UPDATE PROFILE PIC"
            android:fontFamily="sans-serif-medium"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uploadButton"
            android:layout_weight="0.85" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="10sp">
        <TextView
            android:id="@+id/tv31"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:text="Employee Name"
            android:padding="4dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignBaseline="@+id/tv31"
            android:layout_alignBottom="@+id/tv31"
            android:layout_toRightOf="@+id/ed12"
            android:text=":" />
        <EditText
            android:id="@+id/edt12"
            android:inputType="numberDecimal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="10sp">
        <TextView
            android:id="@+id/tv33"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:text="User ID"
            android:padding="4dp"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignBaseline="@+id/tv33"
            android:layout_alignBottom="@+id/tv33"
            android:layout_toRightOf="@+id/ed10"
            android:text=":" />
        <EditText
            android:id="@+id/edt13"
            android:inputType="numberDecimal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
